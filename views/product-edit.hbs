<style>
  /* Style for the buttons to make them bigger */
  .btn {
    font-size: 16px;
    padding: 10px 20px; /* Increase padding for bigger buttons */
    margin-right: 10px; /* Space between buttons */
  }

  /* Ensure buttons appear on the same line */
  .button-container {
    display: flex;
    justify-content: flex-start;
    gap: 10px; /* Optional space between the buttons */
  }

  .btn-primary {
    background-color: #dd00ff;
  }

  .btn-danger {
    background-color: #dc3545;
  }
</style>
<div style="padding: 20px; padding-top: 300px; background-color: #F0F0F0;">
<h1>Edit/Delite {{product.title}}</h1>

<form action="/products/edit" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{product.title}}">
    <label for="title">Name of the technique</label>
    <span class="helper-text" data-error="введите название"></span> 
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required min="1" value="{{product.price}}">
    <label for="price">Equipment price</label>
    <span class="helper-text" data-error="введите цену"></span>
  </div>

  <div class="input-field">
    <input id="sale" name="sale" type="number" class="validate" required  value="{{product.sale}}">
    <label for="sale">Equipment sale</label>
    <span class="helper-text" data-error="введите procent sale"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value="{{product.img}}">
    <label for="img">URL of the image</label>
    <span class="helper-text" data-error="введите URL картинки"></span>
  </div>
  
  <div class="input-field">
    <textarea id="description" name="description" class="materialize-textarea" required>{{product.description}}</textarea>
    <label for="description">Technique Description</label>
    <span class="helper-text" data-error="введите описание"></span>
  </div>
  <div class="input-field">
    <textarea id="category" name="category" class="materialize-textarea" required>{{product.category}}</textarea>
    <label for="category">Technique category</label>
    <span class="helper-text" data-error="введите описание"></span>
  </div>
  <div class="input-field">
    <textarea id="gpu" name="gpu" class="materialize-textarea" required>{{product.gpu}}</textarea>
    <label for="gpu">Technique graphic processor</label>
    <span class="helper-text" data-error="введите описание"></span>
  </div>
  <div class="input-field">
    <textarea id="cpu" name="cpu" class="materialize-textarea" required>{{product.cpu}}</textarea>
    <label for="cpu">Technique processor</label>
    <span class="helper-text" data-error="введите описание"></span>
  </div>
  <div class="input-field">
    <textarea id="rum" name="rum" class="materialize-textarea" required>{{product.rum}}</textarea>
    <label for="rum">Technique rum</label>
    <span class="helper-text" data-error="введите описание"></span>
  </div>
  <div class="input-field">
    <textarea id="ssd" name="ssd" class="materialize-textarea" required>{{product.ssd}}</textarea>
    <label for="ssd">Technique memory</label>
    <span class="helper-text" data-error="введите описание"></span>
  </div>
  
  <input type="hidden" name="id" value="{{product.id}}">
   <button class="btn btn-primary">Save</button>
   <button class="btn btn-danger" id="delete-btn" onclick="deleteProduct('{{product.id}}')">Delete</button>
</form>

<!-- Delete Button -->
<script>
  // Function to handle delete request
  async function deleteProduct(productId) {
    const confirmDelete = confirm('Are you sure you want to delete this product?');
    if (confirmDelete) {
      try {
        const response = await fetch(`/products/${productId}`, {
          method: 'DELETE',
        });
        if (response.ok) {
          alert('product deleted successfully');
          window.location.href = '/products/ed'; // Redirect to the list of courses after deletion
        } else {
          alert('Failed to delete product');
        }
      } catch (error) {
        console.error('Error deleting product:', error);
        alert('Internal Server Error');
      }
    }
  }
</script>
</div>