        justify-content: center;
    }
#nav-mobile-a {
  font-weight: bold;
    display: none; /* Hide menu by default */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color:#6F2FCE; /* Fullscreen dark overlay */
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 10;
}

#nav-mobile-a a {
  font-weight: bold;
    color: white;
    margin: 20px 0;
    text-decoration: none;
    font-size: 24px;
    font-family: 'Saira-condensed', sans-serif;
}

.nav-wrapper {
  background-color: #6F2FCE;
  width: 95%;
   /* по желанию, ограничение на ширину */
  margin: 0 auto;
  
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  border-radius: 12px; 
}
@media only screen and (max-width: 1000px) {
  #desck {
    display: none !important;
  }
   .mobile-menu-button {
        display: block; /* Show button on smaller screens */
    }
}
@media only screen and (min-width: 1000px) {
  
   .mobile-menu-button {
        display: none; /* Show button on smaller screens */
    }
}

</style>
