<style>
  .mobile-menu-button {
  display: none;              /* Hidden by default (shown only on small screens via media query) */
  flex-direction: column;     
  justify-content: space-between;
  width: 30px;
  height: 22px;
  cursor: pointer;
  margin-right: 20px;
  z-index: 11;                /* Above the menu */
  gap: 6px;
}

.mobile-menu-button span {
  display: block;
  height: 8px;
  width: 100%;
  background-color: white;
  border-radius: 2px;
  margin-bottom: 4px;
}

.nav2 {
        
        
