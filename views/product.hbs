<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{product.title}}</title>
  <style>
    /* General styling for all cards */
.component-card {
  padding: 20px;
  margin: 10px;
  border-radius: 8px;
  color: white;
  font-family: Arial, sans-serif;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  width: 100%; /* Make it responsive */
  max-width: 1300px; /* Set a maximum width */
  font-size: 20px;
}
.component-card h3 {
  font-weight: bold;
  color: #EFAD12;
  font-family: Arial, sans-serif;
  font-size: 45px;
}
.component-cardy {
  padding: 20px;
  margin: 10px;
  border-radius: 8px;
  color: white;
  font-family: Arial, sans-serif;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  width: 100%; /* Make it responsive */
  max-width: 1300px; /* Set a maximum width */
  font-size: 20px;
}
.component-cardy h3 {
  font-weight: bold;
  color: #6F2FCE;
  font-family: Arial, sans-serif;
  font-size: 45px;
}
.component-card p {
  font-weight: bold;
  color: #ffffff;
  font-family: Arial, sans-serif;
  font-size: 75px;
}
.component-cardy p {
  font-weight: bold;
  color: #060606;
  font-family: Arial, sans-serif;
  font-size: 75px;
}

/* Responsive styles for screens smaller than 768px */
@media (max-width: 768px) {
  .component-card {
    padding: 15px;
    width: 90%; /* Adjust the width to fit smaller screens */
    font-size: 18px; /* Reduce font size */
  }
}

/* Extra small screens (phones, less than 480px) */
@media (max-width: 480px) {
  .component-card {
    padding: 10px;
    width: 95%;
    font-size: 16px; /* Further reduce font size */
  }
}


/* Purple for GPU */
.gpu {
  background-color: #6F2FCE; /* Purple */
  text-align: left; /* Align content horizontally to the right */
}

/* Blue for CPU */
.cpu {
  background-color: #EFAD12; /* Blue */
  text-align: right;
}

/* Yellow for RAM */
.ram {
  background-color: #6F2FCE; /* Yellow */
  color: rgb(255, 254, 254); /* Text color should be dark for yellow background */
  text-align: left;
}

/* Green for SSD */
.ssd {
  background-color: #EFAD12; /* Green */
  text-align: right;
}

    .course {
      width: 100%;
      
      margin: 0 auto;
      
      text-align: left;
    }

    .course h1 {
      font-size: 70px;
      margin-bottom: 10px;
    }

    .course img {
      width: 100%;
      max-width: 700px;
      height: auto;
      margin-bottom: 20px;
    }

    .course .price {
      font-size: 50px;
      color: rgb(0, 0, 0);
      margin-bottom: 20px;
    }
     .sale {
      font-size: 50px;
    }

    .comments {
      text-align: left;
      margin-top: 30px;
      padding: 5px;
      border-radius: 8px;
    }

    .comments h2 {
      font-size: 22px;
      margin-bottom: 10px;
    }

    .comments ul {
      list-style: none;
      padding: 0;
    }

    .comments li {
      padding: 10px;
      border-bottom: 1px solid #000000;
    }

    .comments li:last-child {
      border-bottom: none;
    }

    .comments strong {
      display: block;
      font-size: 16px;
      margin-bottom: 5px;
    }

    .comments em {
      font-size: 12px;
      color: #535252;
    }

    .add-comment {
      margin-top: 20px;
      text-align: left;
    }

    .add-comment form {
      display: flex;
      flex-direction: column;
    }

    .add-comment label {
      margin-bottom: 5px;
      font-weight: bold;
    }

    .add-comment input,
    .add-comment textarea {
      margin-bottom: 10px;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      width: 100%;
    }

    .add-comment button {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      background-color: #aa00ff;
      color: #fff;
      cursor: pointer;
    }

    
      @media (max-width: 768px) {
    .info {
      flex-direction: column;
      justify-items: center;
    }
  }
  </style>
</head>
<body>

<div class="course">
<div class="info" style="display: flex; align-items: center; padding-top: 200px; padding-bottom: 50px;">
  <img src="{{product.img}}" alt="{{product.title}}" style="flex: 1; margin-right: 20px;">
  <div style="flex: 2;">
    <h1 style="color: #020034; font-size: 70px; font-weight: bold; font-family: Arial, sans-serif; padding-top: 100px;">{{product.title}}</h1>
    <div style="display: flex;  gap: 20px; ">
            {{#if product.sale}}
  <p class="sale" style="color: #ff0101; font-weight: bold; font-family: Arial, sans-serif; text-transform: uppercase;">€{{product.sale}}</p>
  <p style="font-size: 18px; text-decoration: line-through;" class="price">{{product.price}}</p>
{{else}}
  <p class="price" style="color: #020034; font-weight: bold; font-family: Arial, sans-serif; text-transform: uppercase;">{{product.price}}</p>
{{/if}}


            </div>
    <p style="color: #020034; font-size: 46px;  font-family: Arial, sans-serif;">{{product.description}}</p> <!-- Добавлено описание товара -->
     <div style="display: flex; align-items: center; padding-top: 20px;">
    <form action="/card/add" method="POST" style="display:inline;">
              <input type="hidden" name="id" value="{{product._id}}">
              <button type="submit" class="btn btn-primary">{{__ 'Buy'}}</button>
            </form>
            <form action="/favorites/add" method="POST">
              <input type="hidden" name="courseId" value="{{product._id}}">
              <button type="submit" class="likebtn">♥</button>
            </form>
            </div>
  </div>
</div>
<div class="components" style="width: 100%; justify-items: center; background-color: #000000; padding-top: 50px; padding-bottom: 50px;">
   <div class="component-card gpu" style="display: flex; align-items: center;  padding: 20px; border-radius: 10px;">
    <div style="flex: 1; color: white; padding-right: 20px;">
        <h3>graphics</h3>
        <p>{{product.gpu}}</p>
    </div>
    <div style="flex: 1; text-align: right;">
        <img src="/gpu.png" alt="GPU Image" style="max-width: 100%; height: auto; border-radius: 10px;">
    </div>
</div>


<div class="component-cardy cpu" style="display: flex; align-items: center;  padding: 20px; border-radius: 10px;">
    
    <div style="flex: 1; text-align: right;">
        <img src="/cpu.png" alt="GPU Image" style="max-width: 100%; height: auto; border-radius: 10px;">
    </div>
    <div style="flex: 1; color: white; padding-right: 20px;">
        <h3>processor</h3>
        <p>{{product.cpu}}</p>
    </div>
</div>

<div class="component-card ram" style="display: flex; align-items: center;  padding: 20px; border-radius: 10px;">
    <div style="flex: 1; color: white; padding-right: 20px;">
        <h3>rum</h3>
        <p>{{product.rum}}</p>
    </div>
    <div style="flex: 1; text-align: right;">
        <img src="/rum.png" alt="GPU Image" style="max-width: 100%; height: auto; border-radius: 10px;">
    </div>
</div>

<div class="component-cardy ssd" style="display: flex; align-items: center;  padding: 20px; border-radius: 10px;">
    
    <div style="flex: 1; text-align: right;">
        <img src="/ssd.png" alt="GPU Image" style="max-width: 100%; height: auto; border-radius: 10px;">
    </div>
    <div style="flex: 1; color: white; padding-right: 20px;">
        <h3>memory</h3>
        <p>{{product.ssd}}</p>
    </div>
</div>

</div>
<div class="commentssection" style="background-color: #000000; width: 100%;  justify-items: center;  ">
  <div class="comments" style="background-color: #a9a9a9; width: 50%; ">
    <h2>COMMENTS</h2>
    <ul>
      {{#each product.comments}}
        <li>
          <strong>{{this.user}}</strong>
          <span>{{this.text}}</span>
          <em>{{this.date}}</em>
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="add-comment" style="width: 50%;">
    <h3 style="color: #fff;">ADD COMMENTS</h3>
    {{#if user}}
    <form id="commentForm" >
      <input type="hidden" id="user" name="user" value="{{user.username}}"> <!-- Автоматически заполненное имя пользователя -->
      <label for="text">COMMENTS:</label>
      <textarea style="background-color: #a9a9a9;" id="text" name="text" required></textarea>
      <button type="submit">SEND</button>
    </form>
    {{else}}
    <p style="color: #fff;">please, <a href="/login">log in</a>, that send comment.</p>
    {{/if}}
  </div>
</div>
</div>
<script>
  document.querySelector('#commentForm').addEventListener('submit', async function (e) {
    e.preventDefault();

    const user = document.querySelector('#user').value;
    const text = document.querySelector('#text').value;
    const productId = '{{product.id}}';

    try {
      const response = await fetch(`/products/${productId}/comments`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ user, text })
      });

      if (response.ok) {
        const newComment = await response.json();
        const commentList = document.querySelector('.comments ul');
        const newCommentElement = document.createElement('li');
        newCommentElement.innerHTML = `
          <strong>${newComment.user}</strong>
          <span>${newComment.text}</span>
          <em>${newComment.date}</em>
        `;
        commentList.appendChild(newCommentElement);

        document.querySelector('#text').value = '';
      } else {
        console.error('Failed to add comment');
      }
    } catch (error) {
      console.error('Error:', error);
    }
  });
</script>

</body>
</html>
